<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>QuickMart</title>
</head>
<body>
  <div class="container">
    <h1>Categories</h1>
  </div>
</div>

<div class="tags">
  <div class="container">
    <div class="cards row">
      <% @categories.each do |c| %>
      <div class="card col-xs-4">
        <%= image_tag c.image %>
        <h2><%= c.title.capitalize %></h2>
        <p><%= c.description %></p>
        <%= link_to "Check all #{c.title}" , category_path(c) %>
      </div>
      <% end %>
    </div>
  </div>
</div>

</body>
</html>
